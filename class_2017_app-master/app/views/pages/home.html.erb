<%= render 'pages/nav' %>

<h1 id="header">Welcome to Lehi's Random Lunch Generator</h1>

<div class="container-fluid">

  <div class="button-container">
    
    <%= link_to "Find me lunch!", @random_rest, class: "home-button btn-primary" %>

    <% if logged_in?(:user) %>
        <%= link_to "Add a Restaurant", new_restaurant_path, class: "home-button btn-primary" %>
    <% else %>
        <%= link_to "Login to add a Restaurant", new_user_session_path, class: "logged-out home-button btn-primary" %>

    <% end %>
  </div>
</div>

